# Auto detect text files and perform LF normalization
* text=auto

# Rust files
*.rs text eol=lf
*.toml text eol=lf

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
Makefile text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.so binary
*.pyd binary
*.dylib binary
*.whl binary
